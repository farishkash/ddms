<div class="container">
<div class="row pushdown">
<% if can? :all, Document %>
            <%=link_to "Add Document", new_document_path, class: "btn btn-primary" %>
            <% end %>
            </div>
            <div class="row">
<table class="table table-striped table-hover">
    <tbody>
    <tr class="pushdown">
    <th>Document Name</th>
    <th>Project Name</th>
    <th>DSA Number</th>
    	
    </tr>
<% @documents.each do |document| %>
  
    <tr>
    <td><%= link_to document.document_name,(document) %></td>
    <td><%= document.project.project_name %></td>
    <td><%= document.project.dsa_number %></td>
  
    </tr>
     <% end %>
  </tbody>
  </table>
  </div>
 </div>
