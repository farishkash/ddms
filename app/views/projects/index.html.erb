<div class="container">
<div class="row pushdown">
<% if can? :all, Project %>
            <%=link_to "Add Project", new_project_path, class: "btn btn-primary" %>
            <% end %>
            </div>
<div class="row ">
<div class="form-group pushdown">
<%= form_tag(projects_path, :method => "get", id: "search-form") do %>
</div>
<div class="form-group pushdown searchbox">
<%= text_field_tag :search, params[:search], class: "form-control pushdown", placeholder: "Project Search", type: "search", data: {autocomplete: autocomplete_project_project_name_projects_path}, :id_element => "#to_project_id" %> 
<%= hidden_field_tag :to_project_id, id: 'to_school_id' %>
<%= submit_tag "Search", class: "searchbtn" %>
</div>
<div class="form-group pushdown">

<% end %>
</div>
<div class="searchinfo">
</div>
<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('.searchbtn').trigger('click')
  });
  </script>
</div>

            <div class="row">
<table class="table table-striped table-hover">
    <tbody>
    <tr class="pushdown">
    <th>Project Name</th>
    <th>DSA Number</th>
    <th>School</th>
    	
    </tr>
<% @projects.each do |project| %>
  
    <tr>
    <td><%= link_to project.project_name,(project) %></td>
    <td><%= project.dsa_number %></td>
    <td><%= project.school.school_name %></td>
  
    </tr>
     <% end %>
  </tbody>
  </table>
  </div>
 </div>
<%= content_for :script do %>
  new app.Projects;
<% end %>