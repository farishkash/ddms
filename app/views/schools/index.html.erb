<div class="container" %>
<div class="row pushdown">
<% if can? :all, School %>
            <%=link_to "Add School", new_school_path, class: "btn btn-primary" %>
            <% end %>
</div>
<div class="row">

  <table class="table table-striped table-hover">
    <tbody>
    <tr>
    <th>School</th>
    
    <th>District</th>

    </tr>

    <% @schools.each do |school| %>
    <tr>
    
    <td><%= link_to school.school_name, school_path(school) %></td>
    
    <td><%= school.district.district_name %>
</td>

    <% end %>
    </tr>
  </tbody>
  </table>
  
  </div>
</div>