<div class="container" %>
<div class="row pushdown">
<% if can? :all, School %>
            <%=link_to "Add School", new_school_path, class: "btn btn-primary" %>
            <% end %>
</div>
<div class="row ">



<div class="form-group pushdown searchbox">
<%= form_tag(schools_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "School Search", type: "search", data: {autocomplete: autocomplete_school_school_name_schools_path}, :id_element => "#to_school_id" %> 
<%= hidden_field_tag :to_school_id, id: 'to_school_id' %>
<%= submit_tag "Search", class: "searchbutton searchbtn" %>

</div>
<div class="form-group pushdown">

<% end %>
</div>
<div class="searchinfo">
</div>
<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('.searchbtn').trigger('click')
  });
  </script>
</div>
<div class="row">
  <table class="table table-striped table-hover">
    <tbody>
    <tr>
    <th>School</th>
    
    <th>District</th>

    </tr>

    <% @schools.each do |school| %>
    <tr>
    
    <td><%= link_to school.school_name, school_path(school) %></td>
    
    <td><%= school.district.district_name %>
</td>

    <% end %>
    </tr>
  </tbody>
  </table>
  
  </div>
</div>