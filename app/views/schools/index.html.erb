<div class="container" %>
<div class="row pushdown">
<% if can? :all, School %>
            <%=link_to "Add School", new_school_path, class: "btn btn-primary" %>
            <% end %>
</div>
<div class="row">
<%= form_tag(schools_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], class: "search-query", placeholder: "School Search", type: "search", data: {autocomplete: autocomplete_school_school_name_schools_path} %>  
<%= submit_tag "Search" %>
<%end%>
<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('#search-form').submit()
  });
</script>

  <table class="table table-striped table-hover">
    <tbody>
    <tr>
    <th>School</th>
    
    <th>District</th>

    </tr>

    <% @schools.each do |school| %>
    <tr>
    
    <td><%= link_to school.school_name, school_path(school) %></td>
    
    <td><%= school.district.district_name %>
</td>

    <% end %>
    </tr>
  </tbody>
  </table>
  
  </div>
</div>