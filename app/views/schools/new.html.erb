<%=form_for(@school, {class: "form-horizontal"}) do|f| %>
<legend>Select a district then input school name:</legend>
<div class="form-group">
<%= f.collection_select(:district_id, District.all, :id, :district_name,{include_blank: 'Select District'}, {class: "special"}) %>
</div>
<div class="form-group">
  <%= f.text_field :school_name, placeholder:"Input School Name", class: "form-control" %>
  </div>
  <div class="form-group">
  <%=f.submit "Add School", class: "btn btn-primary" %>
  <% end %>
  </div>
