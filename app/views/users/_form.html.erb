
<%= form_for(@user) do |f| %>
  
    <div class="form-group pushdown">
      
      <%= f.text_field :email %>
      </div>
      <div class="form-group pushdown">
      <%= f.collection_select(:district_id, District.all, :id, :district_name,{include_blank: 'Select District'}, {class: "special"}) %>
    </div>
<div class="row form-group pushdown">

    <fieldset>
      <legend>Roles</legend>

      <%= f.fields_for(:roles) do |r| %>
        <%= r.hidden_field :name %>
        <%= r.label :_keep do %>
          <%= r.check_box :_keep, checked: r.object.persisted? %>
          <%= r.object.name %>
        <% end %>
      <% end %>
    </fieldset>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>